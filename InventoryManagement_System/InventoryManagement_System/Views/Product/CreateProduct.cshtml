@model InventoryManagement_System.Models.ProductModel

<style>
	.btn {
		display: inline-block;
		padding: 7px 18px;
		margin-bottom: 10px;
		background-color: green;
		color: white;
		text-decoration: none;
		border-radius: 5px;
		font-weight: bold;
	}

	input{
		width:400px;
	}


	.btn:hover{
		background-color:forestgreen;
	}

	.btn-secondary{
		background-color:royalblue;
	}
	.btn-secondary:hover{
		background-color:dodgerblue;
	}
</style>

<h2>Add Product</h2>

<form method="post">
	<div class="form-group">
		<label>Product Name</label>
		<input type="text" name="ProductName" class="form-control" required />
	</div>
	<div class="form-group">
		<label>Quantity</label>
		<input type="number" name="ProductQuantity" class="form-control" required />
	</div>
	<div class="form-group">
		<label>Price</label>
		<input type="number" step="0.01" name="ProductPrice" class="form-control" required />
	</div>
	<div class="form-group">
		<label>Brand</label>
		<input type="text" name="ProductBrand" class="form-control" required />
	</div>
	<div class="form-group">
		<label>Category</label>
		<select name="CetegoryModel.cetegoryId" class="form-control" required>
			<option value="">-- Select Category --</option>
			@foreach (var category in ViewBag.Categories)
			{
				<option value="@category.cetegoryId">@category.cetegoryName</option>
			}
		</select>
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-success">Submit</button>
		<a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to Home</a>
	</div>
</form>
