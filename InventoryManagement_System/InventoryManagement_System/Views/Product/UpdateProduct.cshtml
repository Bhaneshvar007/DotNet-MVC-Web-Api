@model InventoryManagement_System.Models.ProductModel

<style>
    .btn {
        display: inline-block;
        padding: 7px 18px;
        margin-bottom: 10px;
        background-color: green;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
    }

        .btn:hover {
            background-color: forestgreen;
        }

    .btn-secondary {
        background-color: royalblue;
    }

        .btn-secondary:hover {
            background-color: dodgerblue;
        }
</style>

<h2>Update Product</h2>

<form method="post">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />

    <div class="form-group">
        <label>Product Name</label>
        <input type="text" name="ProductName" class="form-control" value="@Model.ProductName" required />
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input type="number" name="ProductQuantity" class="form-control" value="@Model.ProductQuantity" required />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" step="0.01" name="ProductPrice" class="form-control" value="@Model.ProductPrice" required />
    </div>
    <div class="form-group">
        <label>Brand</label>
        <input type="text" name="ProductBrand" class="form-control" value="@Model.ProductBrand" required />
    </div>
    <div class="form-group">
        <label>Category</label>
        <select name="CetegoryModel.cetegoryId" class="form-control" required>
            <option value="">-- Select Category --</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.cetegoryId" selected="@(Model.CetegoryModel?.cetegoryId == category.cetegoryId ? "selected" : null)">
                    @category.cetegoryName
                </option>
            }
        </select>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Update</button>
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to Home</a>
    </div>
</form>
