@model VendoreModel

@{
    ViewData["Title"] = "Add Vendor";
}

<h2>Add Vendor</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form method="post">
    <div class="form-group">
        <label>Vendor Name</label>
        <input type="text" class="form-control" asp-for="vendor_name" required />
    </div>

    <div class="form-group">
        <label>Vendor Email</label>
        <input type="email" class="form-control" asp-for="vendor_email" required />
    </div>

    <div class="form-group">
        <label>Vendor Address</label>
        <input type="text" class="form-control" asp-for="vendor_address" required />
    </div>

    <div class="form-group">
        <label>Date of Sale</label>
        <input type="date" class="form-control" asp-for="date_of_sale" required />
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <input type="number" class="form-control" asp-for="quantity" required />
    </div>

    <div class="form-group">
        <label>Billing Amount</label>
        <input type="number" step="0.01" class="form-control" asp-for="billing_amount" required />
    </div>

    <div class="form-group">
        <label>Category</label>
        <select class="form-control" asp-for="CetegoryModel.cetegoryId" required>
            <option value="">-- Select Category --</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.cetegoryId">@category.cetegoryName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Product</label>
        <select class="form-control" asp-for="ProductModel.ProductId" required>
            <option value="">-- Select Product --</option>
            @foreach (var product in ViewBag.Products)
            {
                <option value="@product.ProductId">@product.ProductName</option>
            }
        </select>
    </div>
    
    

    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>
