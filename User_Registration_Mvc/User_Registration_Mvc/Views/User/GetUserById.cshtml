@model User_Registration_Mvc.Models.User

@{
    ViewData["Title"] = "GetUserById";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 800px;
        margin: auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #007bff;
         
        margin-bottom: 20px;
    }

    h4 {
        color: #343a40;
        
        font-size: 20px;
        font-weight: bold;
    }

    dl {
        display: flex;
        flex-wrap: wrap;
        border-top: 2px solid #007bff;
        padding-top: 10px;
    }

    dt {
        font-weight: bold;
        color: #333;
        width: 30%;
        padding: 5px 0;
        
    }

    dd {
       
        padding: 5px 0;
         
    }

    .btn-container {
        margin-top: 20px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none;
        color: white;
        margin: 5px;
        transition: background 0.3s ease-in-out;
    }

    .btn-edit {
        background-color: #007bff;
        border: none;
    }

        .btn-edit:hover {
            background-color: #0056b3;
        }

    .btn-back {
        background-color: #6c757d;
        border: none;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }
</style>

<div class="container">
    <h1>Get User By ID</h1>

    <div>
        <h4>User Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.U_id)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.U_id)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.firstName)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.firstName)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.lastName)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.lastName)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.email)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.email)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.phoneNum)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.phoneNum)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.country)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.country)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.state)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.state)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.pincode)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.pincode)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.area)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.area)</dd>
        </dl>
    </div>

    <div class="btn-container">
        <a href="@Url.Action("UpdateUser", "User", new { id = Model.U_id })" class="btn btn-edit">Update</a>
        <a asp-action="Index" class="btn btn-back">Back to List</a>
    </div>
</div>
