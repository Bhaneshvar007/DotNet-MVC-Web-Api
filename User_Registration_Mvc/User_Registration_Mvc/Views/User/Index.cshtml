@model IEnumerable<User_Registration_Mvc.Models.User>

@{
    ViewData["Title"] = "User Page";
    int i = 1;
}

<style>
    .user-table-wrapper {
        width: 1300px;
        overflow-x: auto;  
        margin: 20px 0;
        margin-left:-80px;
    }

    .user-table {
        width: 100%;
        table-layout: fixed;  
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        margin-top:30px
    }

        .user-table thead {
            background-color: #333;
            color: white;
        }

        .user-table th, .user-table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
            overflow: hidden;
            text-overflow: ellipsis;
            word-wrap: break-word;
        }

        .user-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .user-table th {
            width: 10%;  
        }

        .user-table td {
            width: 7%;  
        }

            .user-table th:nth-child(1), .user-table td:nth-child(1) {
                width: 5%;
            } .user-table th:nth-child(4), .user-table td:nth-child(4) {
                width: 20%;
            }
            .user-table th:nth-child(10), .user-table td:nth-child(10) {
                width: 25%;
            }

    .btn-view, .btn-edit, .btn-delete {
        padding: 6px 12px;
        text-decoration: none;
        border-radius: 4px;
        font-size: 14px;
        margin: 0 5px;
    }

    .btn-view {
        background-color: #5bc0de;
        color: white;
    }

    .btn-create {
        background-color: limegreen;
        color: white;
        font-weight: bold;
        font-size: 18px;
        text-decoration: none;
        border-radius: 4px;
        padding: 10px 25px;
        margin-top:10px;
    }

    .btn-edit {
        background-color: #f0ad4e;
        color: white;
    }

        .btn-delete:hover, .btn-view:hover, .btn-edit:hover, .btn-create:hover {
            color: white;
        }

    .btn-delete {
        background-color: #d9534f;
        color: white;
    }
</style>

<div class="user-table-wrapper">
<h2>Welcome to the User Page</h2>

<a href="@Url.Action("UserRegistration", "User")" class="btn-create">Create User</a>

    <table class="user-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Country</th>
                <th>State</th>
                <th>Area</th>
                <th>Pincode</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    @* <td>@user.U_id</td> *@
                    <td>@(i++)</td>
                    <td>@user.firstName</td>
                    <td>@user.lastName</td>
                    <td>@user.email</td>
                    <td>@user.phoneNum</td>
                    <td>@user.country</td>
                    <td>@user.state</td>
                    <td>@user.area</td>
                    <td>@user.pincode</td>
                    <td>
                        <a href="@Url.Action("GetUserById", "User", new { id = user.U_id })" class="btn-view">View</a>
                        <a href="@Url.Action("UpdateUser", "User", new { id = user.U_id })" class="btn-edit">Update</a>
                        <a href="@Url.Action("DeleteUser", "User", new { id = user.U_id })" class="btn-delete" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

 
