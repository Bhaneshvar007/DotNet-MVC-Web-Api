@model User_Registration_Mvc.Models.User

@{
    ViewData["Title"] = "User Registration";
}

<h1>User Registration</h1>

<h4>User</h4>
<hr />

<!-- Add your custom CSS styles here -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        flex-direction:column;

        justify-content: center;
        align-items: center;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    h4 {
        color: #555;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
        }

    .text-danger {
        font-size: 12px;
        color: red;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .back-link a {
        color: #007bff;
        text-decoration: none;
    }

        .back-link a:hover {
            text-decoration: underline;
        }

    /* Centering the form */
    .form-container {
        width: 100%;
        max-width: 600px; /* Set a max-width for the form */
        padding: 30px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="form-container">
    <form action="UserRegistration" method="post">
        <div class="text-danger" id="validation-summary"></div>

        <div class="form-group">
            <label for="firstName" class="control-label">First Name</label>
            <input type="text" id="firstName" name="firstName" class="form-control" />
            <span  class="text-danger" id="firstName-error">@Html.ValidationMessage("firstName")</span>
        </div>

        <div class="form-group">
            <label for="lastName" class="control-label">Last Name</label>
            <input type="text" id="lastName" name="lastName" class="form-control" />
            <span class="text-danger" id="firstName-error">@Html.ValidationMessage("lastName")</span>
        </div>

        <div class="form-group">
        <div class="form-group">
            <label for="email" class="control-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" />
            <span class="text-danger" id="firstName-error">@Html.ValidationMessage("email")</span>
        </div>

        <div class="form-group">
            <label for="phoneNum" class="control-label">Phone Number</label>
            <input type="tel" id="phoneNum" name="phoneNum" class="form-control" />
            <span class="text-danger" id="firstName-error">@Html.ValidationMessage("phoneNum")</span>
        </div>

        <div class="form-group">
            <label for="country" class="control-label">Country</label>
            <input type="text" id="country" name="country" class="form-control" />
            <span class="text-danger" id="firstName-error">@Html.ValidationMessage("country")</span>
        </div>

        <div class="form-group">
            <label for="state" class="control-label">State</label>
            <input type="text" id="state" name="state" class="form-control" />
            <span class="text-danger" id="firstName-error">@Html.ValidationMessage("state")</span>
        </div>

        <div class="form-group">
            <label for="pincode" class="control-label">Pincode</label>
            <input type="text" id="pincode" name="pincode" class="form-control" />
            <span class="text-danger" id="firstName-error">@Html.ValidationMessage("pincode")</span>
        </div>

        <div class="form-group">
            <label for="area" class="control-label">Area</label>
            <input type="text" id="area" name="area" class="form-control" />
            <span class="text-danger" id="firstName-error">@Html.ValidationMessage("area")</span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <div class="back-link">
        <a asp-action="Index">Back to List</a>
    </div>
</div>

   
 
 
