@{
}
@model User_Registration_Mvc.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 50%;
            margin: 50px auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .user-info {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
            color: #333;
        }

        span {
            display: block;
            margin-top: 5px;
            color: #555;
        }

        .back-link {
            margin-top: 20px;
            text-align: center;
        }

            .back-link a {
                background-color: #007bff;
                color: white;
                padding: 10px 20px;
                border: none;
                border-radius: 4px;
                text-decoration: none;
                font-size: 16px;
            }

                .back-link a:hover {
                    background-color: #0056b3;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>User Details</h1>

        <div class="user-info">
            <div class="form-group">
                <label for="firstName">First Name:</label>
                <span id="firstName">@Model.firstName</span>
            </div>

            <div class="form-group">
                <label for="lastName">Last Name:</label>
                <span id="lastName">@Model.lastName</span>
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <span id="email">@Model.email</span>
            </div>

            <div class="form-group">
                <label for="phoneNum">Phone Number:</label>
                <span id="phoneNum">@Model.phoneNum</span>
            </div>

            <div class="form-group">
                <label for="country">Country:</label>
                <span id="country">@Model.country</span>
            </div>

            <div class="form-group">
                <label for="state">State:</label>
                <span id="state">@Model.state</span>
            </div>

            <div class="form-group">
                <label for="area">Area:</label>
                <span id="area">@Model.area</span>
            </div>

            <div class="form-group">
                <label for="pincode">Pincode:</label>
                <span id="pincode">@Model.pincode</span>
            </div>
        </div>

        <div class="back-link">
            <a href="@Url.Action("Index", "Home")">Back to List</a>
        </div>
    </div>
</body>
</html>
